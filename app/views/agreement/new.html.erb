<div class="container">
	<h3>New Agreement</h3>
	<div class="row">
		<div class="col-md-4">
			<%= form_for(:form) do |f| %>
				<div class="form-group">
					<%= f.label(:name, "Merchant's Name:") %>
					<%= f.text_field(:name, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label(:email, "Merchant contact email:") %>
					<%= f.text_field(:email, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label(:website, "Merchant's Website:") %>
					<%= f.text_field(:website, class: "form-control") %>
				</div>
				<div class="form-group">
					<%= f.label(:implementation, "Merchant's Implementation:") %>
					<%= f.select(:implementation, options_for_select([['VT Link', 1], ['VT Web', 2], ['VT Direct', 3]], 1), {}, class: "form-control") %>
				</div>
				<%= f.submit "Create", :class => "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
