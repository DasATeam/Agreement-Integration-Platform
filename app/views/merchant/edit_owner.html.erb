<div class="container">
	<ul class="nav nav-wizard">
		<li class="active"><a href="<%= request.base_url + '/merchant/info/general' %>">1. Merchant Information Form</a></li>
		<li><a href="<%= request.base_url + '/merchant/document' %>">2. Upload Documents</a></li>
		<li><a>3. Terms & Conditions</a></li>
		<li><a>4. Additional Document</a></li>
    	<li><a>5. Finish</a></li>
	</ul>
	<div class="vertical-space" style="height:30px;"></div>

	<div class="row">
		<div class="container">
			<div class="alert alert-success">Please fill the information forms below.</div>	
		</div>
	</div>

	<div class="row">
		<div class="container">
			<ul class="nav nav-tabs">
			  <li><a href="general" style="<%= if @merchant.valid? then @green end%>"><%= if @merchant.valid? then content_tag(:span, nil, {class:'glyphicon glyphicon-ok', 'aria-hidden' => 'true'}) end%> General</a></li>
			  <li><a href="pic" style="<%= if @merchant_pic.valid? then @green end%>"><%= if @merchant_pic.valid? then content_tag(:span, nil, {class:'glyphicon glyphicon-ok', 'aria-hidden' => 'true'}) end%> PIC</a></li>
			  <li class="active"><a href="owner" style="<%= if @merchant_owner.valid? then @green end%>"><%= if @merchant_owner.valid? then content_tag(:span, nil, {class:'glyphicon glyphicon-ok', 'aria-hidden' => 'true'}) end%> Owner</a></li>
			  <li><a href="cs" style="<%= if @merchant_cs.valid? then @green end%>"><%= if @merchant_cs.valid? then content_tag(:span, nil, {class:'glyphicon glyphicon-ok', 'aria-hidden' => 'true'}) end%> Customer Support</a></li>
			  <li><a href="operational" style="<%= if @merchant_operational.valid? then @green end%>"><%= if @merchant_operational.valid? then content_tag(:span, nil, {class:'glyphicon glyphicon-ok', 'aria-hidden' => 'true'}) end%> Operational</a></li>
			  <li><a href="bank" style="<%= if @bank_account.valid? then @green end%>"><%= if @bank_account.valid? then content_tag(:span, nil, {class:'glyphicon glyphicon-ok', 'aria-hidden' => 'true'}) end%> Bank Account</a></li>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<%= form_for :merchant do |f| %>
				<h3>Merchant Owner Info</h3>
				<% if flash[:alert] %>
					<div class="alert alert-danger"><%= flash[:alert] %></div>
				<% end %>
				<%= fields_for :merchant_owner do |ow|%>
					<div class="form-group">
					    <%= ow.label(:name, "Name") %><br>
					    <%= ow.text_field(:name, class: "form-control", value: @merchant_owner.name, placeholder: "ex./ John") %>
					</div>
					<div class="form-group">
					    <%= ow.label(:address, "Address") %><br>
					    <%= ow.text_field(:address, class: "form-control", value: @merchant_owner.address, placeholder: "ex./ Jl. example no. 1") %>
					</div>
					<div class="form-group">
					    <%= ow.label(:email, "Email") %><br>
					    <%= ow.text_field(:email, class: "form-control", value: @merchant_owner.email, placeholder: "ex./ example.example.com") %>
					</div>
					<div class="form-group">
					    <%= ow.label(:telephone, "Telephone") %><br>
					    <%= ow.text_field(:telephone, class: "form-control", value: @merchant_owner.telephone, placeholder: "ex./ 08123456789") %>
					</div>
			  <% end %>
			  
			  <div class="col-xs-12 vertical-space" style="height:25px;"></div>
				<%= f.submit "Next", :name => 'save_owner', :class => "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
