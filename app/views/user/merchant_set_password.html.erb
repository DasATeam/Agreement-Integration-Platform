<div class="row">
<div class="col-md-4 col-sm-6 col-xs-12 col-md-offset-4 col-sm-offset-3 col-xs-offset-0">

<%= form_for :pass do |f| %>
  <div class="form-group">
    <h4 class="">Please set your password</h4>
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <%= f.password_field :password, id: "password", class: "form-control", placeholder: "Password", required: "", autofocus: "" %> <br/>
  </div>

  <div class="form-group">
    <label for="confirmation">Confirm Your Password</label>
    <%= f.password_field :password_confirmation, id: "confirmation", class: "form-control", placeholder: "Password", required: "" %> <br/>
  </div>

  <% if flash[:error] %>
    <div class="alert alert-danger"><%= flash[:error] %></div>
  <% end %>

  <%= f.submit "Save", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>

</div>
</div>




