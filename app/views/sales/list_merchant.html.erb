<h1>Current Merchant</h1>
<%= link_to 'Create New agreement', 'agreement/new' %><br/>
<% @sales_merchants.each do |merchant| %>
  <%= merchant.name %><br/>
 <%= check_box_tag :info_is_completed, "1", merchant.info_is_completed, :disabled => "true" %>
  <%= label_tag :info_is_completed, "information" %> <br/>
  <%= check_box_tag :documents_is_completed, "1,", merchant.documents_is_completed, :disabled => "true" %>
  <%= label_tag :documents_is_completed, "documents" %> <br/>
  <% merchant.agreements.each do |agreement| %>
    <%= check_box_tag :has_agree,"1", agreement.has_agree, :disabled => "true" %>
    <%= label_tag :has_agree, "terms & conditions" %> <br/>
    <% end %>
   <%= link_to 'Details', '/merchant/details/:merchant_id'%><br/>
<% end %>
